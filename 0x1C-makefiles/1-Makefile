# Usage:
# make        # compile all binary
# make clean  # remove ALL binaries and objects

.PHONY = all clean

CC = gcc			# compiler to use

LINKERFLAG = -lm

SRCS := school.c
BINS := school

all: school

school: school.o
	@echo "Checking.."
	gcc -lm school.o -o school

school.o: school.c
	@echo "Creating object.."
	gcc -c school.c

clean:
	@echo "Cleaning up..."
	rm -rvf school.o school
